mixin authorForm(author, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='first_name') First Name
                input(id='first_name' name='first_name' value= author.first_name)

            div.form-input
                label(for='last_name') Last Name
                input(id='last_name' name='last_name' value= author.last_name)

            div.form-input
                label(for='birth') Date of Birth
                input(id='birth' name='birth' value= author.birth)

            div.form-input
                label(for='written') Written Books
                input(id='written' name='written' value= author.written)

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button(type='submit') Save